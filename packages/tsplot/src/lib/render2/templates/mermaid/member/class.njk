{% set annotation = mermaid.annotation(member) %}
{% set brackets = forceBrackets or member.fields.length or member.methods.length or annotation.length -%}

{{ 'class' | indent(4, true) }} {{ member.name }} {{ '{' if brackets }}
{% block content %}
  {{- (annotation | indent(8, true) + '\n') if annotation.length -}}
  {% block fields %}
    {% for f in member.fields %}
      {{- mermaid.field(f) | indent(8, true) }}
    {% endfor %}
  {% endblock %}
  {% block methods %}
    {% for m in member.methods %}
      {{- mermaid.signature(m) | indent(8, true) }}
    {% endfor %}
  {% endblock %}
{% endblock %}
{{- '}' | indent(4, true) if brackets }}
